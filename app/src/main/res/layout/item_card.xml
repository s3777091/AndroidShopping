<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/card_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="5dp"

    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation=".1dp"
    app:cardPreventCornerOverlap="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemdt_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_card_height"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/refer_icon"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/itemdt_ten"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/normalPadding"
            android:layout_marginTop="@dimen/top_text_card"
            android:layout_marginRight="@dimen/normalPadding"
            android:fontFamily="@font/opensans_italic"
            android:text="Hello"
            android:textColor="@color/darkTextColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/itemdt_gia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/normalPadding"
            android:layout_marginTop="@dimen/top_text_subtitle_card"

            android:layout_marginRight="@dimen/normalPadding"
            android:layout_marginBottom="@dimen/normalPadding"

            android:fontFamily="@font/opensans_italic"

            android:text="12"
            android:textColor="@color/dashboard_subtitle"
            android:textSize="@dimen/d_number_courses" />


    </LinearLayout>

</androidx.cardview.widget.CardView>